{% extends "base.html.j2" %}

{% block secondary_navbar %}
    <!-- The Meet-specific Navbar -->
    <div class="row mb-4">
        <div class="col px-5">
            <h1 class="d-flex justify-content-between align-items-center ">
                {% block secondary_nav_title %}
                    PLACEHOLDER
                {% endblock secondary_nav_title %}

                {% if 'admin_user' in session %}
                    <a {% block nav2_admin_url %}href="#PLACEHOLDER_ADMIN_URL"{% endblock nav2_admin_url %}>
                       <i class="fas fa-cog fa"></i>
                    </a>
                {% endif %}
            </h1>
            <h4>{% block nav2_subtitle %}
                    PLACEHOLDER
                {% endblock nav2_subtitle %}
            </h4>
        </div>
    </div>
{% endblock secondary_navbar %}


{% block content %}

  <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header bg-primary mb-3">
                    <ul class="nav nav-tabs card-header-tabs">

                       <li class="nav-item">
                            <a class="nav-link active tms-tab" id="tms-tab1" data-toggle="tab" role="tab" href="#tms-tab1-content" aria-controls="tms-tab1-content" aria-select="true">
                                {% block tab1_name %}
                                    PLACEHOLDER 
                                {% endblock tab1_name %}
                            </a>
                        </li>
        
                        <li class="nav-item">
                            <a class="nav-link tms-tab" id="tms-tab2" data-toggle="tab" role="tab" href="#tms-tab2-content" aria-controls="tms-tab2-content" aria-select="true">
                                {% block tab2_name %}
                                    PLACEHOLDER 
                                {% endblock tab2_name %}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tms-tab" id="tms-tab3" data-toggle="tab" role="tab" href="#tms-tab3-content" aria-controls="tms-tab3-content" aria-select="false">
                                {% block tab3_name %}
                                    PLACEHOLDER 
                                {% endblock tab3_name %}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link tms-tab" id="tms-tab4" data-toggle="tab" role="tab" href="#tms-tab4-content" aria-controls="tms-tab4-content" aria-select="false">
                                {% block tab4_name %}
                                    PLACEHOLDER 
                                {% endblock tab4_name %}
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="meet-tab-content">

                        <div id="tms-tab1-content" class="tab-pane fade show active" role="tabpanel" aria-labelledby="tms-tab1">
                            {% block tab1_content %}
                                PLACEHOLDER
                            {% endblock tab1_content %}
                        </div>

                        <div id="tms-tab2-content" class="tab-pane fade" role="tabpanel" aria-labelledby="tms-tab2">
                            {% block tab2_content %}
                                PLACEHOLDER                            
                            {% endblock tab2_content %} 
                        </div>  {# all-events #}

                        <div id="tms-tab3-content" class="tab-pane fade" role="tabpanel" aria-labelledby="tms-tab3">
                            {% block tab3_content %}
                                PLACEHOLDER
                            {% endblock tab3_content %}
                        </div>

                        <div id="tms-tab4-content" class="tab-pane fade" role="tabpanel" aria-labelledby="tms-tab4">
                            {% block tab4_content %}
                                PLACEHOLDER
                            {% endblock tab4_content %}
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>
{% endblock %}




