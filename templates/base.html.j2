<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Track Meet Simplicity</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.11/css/all.css">
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
  <link rel="stylesheet" type="text/css" href="
  https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css">  
  <link rel="stylesheet" href="static/css/styles.css">
</head>

<body>
  {% block nav_not_on_login_reg_pages %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">TrackMeetSimplicity</a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">
              Home
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/meets">
              Meets
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/athletes">
              Athletes
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/schools">
              Schools
            </a>
          </li>
        </ul>
        <!-- The right-most profile menu -->
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarUserMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              {{session.user_email}}
            </a>
            <div class="dropdown-menu" "aria-labelledby="navbarUserMenuLink">
              <a class="dropdown-item" href="/profile">Profile</a>
              <a class="dropdown-item" href="/do-logout">Logout</a>
          </li>
        </ul>
      </div>
    </nav>
  {% endblock %}  {# the navbar, which won't appear on login or reg pages #}

  <div class="container">
      {# Display flashed messages #}
    <div>
      {% with messages = get_flashed_messages() %}
        {% if messages %}
          <div class="alert alert-info" role="alert">
            <row>
              <ul>
                {% for message in get_flashed_messages() %}
                  <li>{{message}}</li>
                {% endfor %}
              </ul>
            </row>
          </div>
        {% endif %}
      {% endwith %}
    </div>

    {% block content %}
        PLACEHOLDER CONTENT
    {% endblock %}
  </div>


    <!-- PUT A FOOTER IN HERE -->

    <!--  Bootstrap requires the following -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    {% block my_javascripts %}
    {% endblock %}
</body>
</html>

