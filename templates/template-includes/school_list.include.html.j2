{# School List #}

    <table id="school_table" class="display" data-order='[[ 0, "asc" ]]' data-page-length='100'>
        <thead>
            <tr>
                <th>School Name</th>
                <th>Code</th>
                <th>City</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            {% for school in list %}
                <tr>    
                    <td>
                        <a href="{{ url_for('show_school_detail', school_id=school.id) }}">
                            {{ school['name'] }}
                        </a>
                    </td>
                    <td>{{ school['code']}}</td>
                    <td>
                        {% if school['city'] %}
                            {{ school.city }}
                        {% endif %}
                    </td>
                    <td>
                        {% if school['state'] %}
                            {{ school.state }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>