{% extends "__secondary_nav.html.j2" %}
{% from "__macros.html.j2" import SHOW_MY_SCHOOL_INDICATOR %}


{% block myschool_indicator %}
  {{SHOW_MY_SCHOOL_INDICATOR(school)}}
{% endblock %}

{% block secondary_nav_title %}
    Edit > {{ school.name }}
{% endblock secondary_nav_title %}

{% block admin_cog %}
{% endblock admin_cog %}

{% block nav2_subtitle %}
{% endblock nav2_subtitle %}


{% block content %}
  <form action="{{ url_for('do_upload_school_entries', meet_id=meet.id, school_id=school.id) }}" method="POST">
    
    <div class="form-group">
      <label for="school_name">School Name:</label>
      <input type="text" class="form-control" name="school_name" id="school_name" placeholder="Enter name of school" value="{{ school.name }}" required>
    </div>
    <div class="form-group">
      <label for="school_code">School Code:</label>
      <input type="text" class="form-control" name="school_code" placeholder="" value="{{ school.code }}" required/>
    </div>
    <div class="form-group">
      <label for="League">League:</label>
      <input type="text" class="form-control" name="league" placeholder="Enter school's league" 
      {% if school.league %}value="{{ school.league }}"{% endif %}  />
    </div>
    <div class="form-group">
      <label for="section">Section:</label>
      <input type="text" class="form-control" name="section" placeholder="Enter school's competitive section" 
      {% if school.section %}value="{{ school.section }}"{% endif %}  />
    </div>
    <div class="form-group">
      <label for="city">City:</label>
      <input type="text" class="form-control" name="city" placeholder="Enter school's city" 
      {% if school.city %}value="{{ school.city }}"{% endif %}  />
    </div>
      <div class="form-group">
      <label for="state">State:</label>
      <input type="text" class="form-control" name="state" placeholder="Enter school's state" 
      {% if school.state %}value="{{ school.state }}"{% endif %}  />
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <a href="{{ url_for('show_school_detail', school_id=school.id) }}">
    <button class="btn btn-secondary">Cancel</button>
  </a>

{% endblock %}